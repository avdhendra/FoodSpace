<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/diningimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/i"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="2dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Open Now"
               android:id="@+id/time"
               android:textSize="18sp"
               android:textColor="@color/black"
               android:drawablePadding="10dp"
               app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="400 for two"
               android:textSize="18sp"
               android:id="@+id/perperson"
               android:textColor="@color/black"
               android:drawablePadding="10dp"
               app:drawableStartCompat="@drawable/rupee" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Serve Fast Food,Chinese,North Indian"
               android:textSize="18sp"
               android:textColor="@color/black"
               android:id="@+id/foodType"
               android:drawablePadding="10dp"
               app:drawableStartCompat="@drawable/ic_baseline_fastfood_24" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="3.5 Km"
               android:id="@+id/fooddistance"
               android:textSize="18sp"
               android:textColor="@color/black"
               android:drawablePadding="10dp"
               app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>