<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        >

        <androidx.cardview.widget.CardView
android:elevation="15dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            android:layout_height="wrap_content">
            <ImageView
android:id="@+id/fooditem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/restuarantimg"
                android:src="@drawable/i"
                />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            >

            <TextView
                android:id="@+id/ResturantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bapu Di Rasoi"
    android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0"
             app:layout_constraintBottom_toBottomOf="@+id/foodstyle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"

                android:background="@drawable/rate"
                android:fontFamily="@font/artifika"
                android:text="4.0"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:drawableRightCompat="@drawable/ic_baseline_star_24"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ResturantName"
                app:layout_constraintTop_toTopOf="@+id/linearTypeRest" />

            <TextView
              android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="150 for one"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ResturantName"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:drawableLeftCompat="@drawable/rupee" />

            <TextView
                android:id="@+id/foodstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/alef"
                android:text="North Indian,Chinese,Fast Food"
                android:textColor="#4C4C4C"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0"

                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view"
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_marginTop="85dp"
                android:background="#3C3B3B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/linearTypeRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintVertical_bias="1">
                <TextView
                    android:id="@+id/halResturant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is pure veg restuarant"
                    android:textColor="@color/black"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1"
                    android:layout_marginTop="100dp"
                    />




            </LinearLayout>

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/leaf"
app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="30dp"
app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>