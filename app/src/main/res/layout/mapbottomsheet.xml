    android:id="@+id/bottomsheetRecycler"
    />
    -->
    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:background="#C6BEBE"/>
</LinearLayout>