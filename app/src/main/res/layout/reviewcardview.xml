<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_margin="2dp"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/reviewImage"
            android:background="@drawable/sphagetti"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avdhendra Singh "
        android:id="@+id/reviewname"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rate"
        android:text="4.0"
        android:id="@+id/reviewrating"
        android:textColor="@color/white"

        app:drawableEndCompat="@drawable/ic_baseline_star_24" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="delivery"
    android:layout_marginLeft="10dp"
    android:textColor="@color/black"
    />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reviewmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taste was good but without additional taste it was"
            android:textColor="@color/black"
            android:maxLines="3"
            
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#636363"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
android:layout_weight="3"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:layout_weight="3"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_thumb_up_off_alt_24" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Comment"
    android:drawablePadding="10dp"
    android:textColor="@color/black"
    android:layout_weight="3"
    app:drawableStartCompat="@drawable/ic_baseline_insert_comment_24" />
        <TextView
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Share"
android:layout_weight="3"
            app:drawableStartCompat="@drawable/ic_baseline_send_24" />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>