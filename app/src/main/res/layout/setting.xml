    android:gravity="center"
    android:padding="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/settingImage1"
        android:layout_width="wrap_content"
    android:src="@drawable/ic_baseline_bookmark_border_24"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
